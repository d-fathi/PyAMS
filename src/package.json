      "editor/editor.html",
      "editor/editor.js",
      "dialogs/logo.png",
      "dialogs/library.html",
      "build/logo_win.ico",
      "build/logo.ico",
      "cad/index.css",
      "data/split.js",
      "data/src/css/index.css",
      "data/src/css/model.css",
