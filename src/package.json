    "cad/dataHtml.js",
    "cad/index.js",
    "cad/action.js",
    "cad/user.js",
    "cad/files.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico"
    },
   "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
